.navbar
  background-color #50758d
  display flex
  display -webkit-flex
  height 80px
  justify-content space-between
  
  *
    position relative
    height 70%
    top 15%
  
  i    
    margin-right 10px
    display none
    opacity 0.7
    font-size 56px
    color #50758d
    background-color #140124
    border-radius 5px    
    &:active
    &:hover
      color white
    
  img
    width auto
    margin-left 10px
    
  a
    color #e6e6e9
    margin-right 10px
    border 2px solid #bfd4e8
    text-align center
    text-decoration none
    font-size 16px
    border-radius: 5px;

.navbar
  background-color #50758d
  display flex
  display -webkit-flex
  height 80px
  justify-content space-between
  
  *
    position relative
    height 70%
    margin-top 10px
    padding-top 0
    background-color black
  
  i    
    margin-right 10px
    display none
    opacity 0.7
    font-size 56px
    color #50758d
    background-color #140124
    border-radius 5px    
    &:active
    &:hover
      color white
    
  img
    width auto
    margin-left 10px

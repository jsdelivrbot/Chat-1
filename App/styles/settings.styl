.settings
  background-color #50758d
  overflow-y auto
  min-width 250px
  flex-basis 25%
  font-size 1.2em
  font-family Arial, Helvetica, sans-serif
  color #020202e0
  
  label, input
    margin-bottom 5px
  
  & > div
    background-color #e6e6e9
    margin 10px
    padding 10px
    border-radius 5px
    
    &:first-child
      margin-top 0
    
    & > label
      display block
    
    & > input
      cursor pointer
      margin-right 20px
      float left
      
    & > div:nth-child(8)
      margin 10px 0 10px 0
      
    & > div:nth-child(1)
      margin-bottom 10px
      
  


.textfield
  background-color #5560d833
  padding 10px
  display flex
  display -webkit-flex
  justify-content space-around
  
  textarea
    flex-basis 80%
    resize none
    font-size 15px
    line-height 1.5
    letter-spacing 1px
    border-radius 5px
    height 4em
    
  i
    font-size 4em
    color #e6e6e9
    &:hover
      color white
    &:last-child
      margin-left 15px
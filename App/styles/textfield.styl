.textfield
  background-color #5560d833
  display flex
  display -webkit-flex
  justify-content space-around
  padding 10px
  
  textarea
    flex-basis 80%
    resize none
    font-size 16px
    letter-spacing 1px
    border-radius 5px
    
  i
    position relative
    line-height 115%
    font-size 4em
    color #e6e6e9
    &:hover
      color white
    &:last-child
      margin-left 15px
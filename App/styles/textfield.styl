.textfield
  background-color #5560d833
  display flex
  display -webkit-flex
  justify-content space-around
  padding 10px
  height 90px
  
  textarea
    flex-basis 80%
    line-height 1.5
    resize none
    font-size 16px
    letter-spacing 1px
    border-radius 5px
    height 70px
    
  i
    position relative
    top 0 
    margin-top 0
    padding-top 0
    line-height 115%
    font-size 70px
    color #e6e6e9
    &:hover
      color white
    &:last-child
      margin-left 15px
.textfield
  background-color #5560d833
  padding 10px
  display flex
  justify-content space-around

  textarea
    flex-basis 70%
    resize none
    font-size 15px
    line-height 1.5
    letter-spacing 1px
    border-radius 5px
  
  .next-button
    flex-basis 8%
    
  .send-button
    border-top-right-radius 10px
    border-bottom-right-radius 10px
    flex-basis 8%
    
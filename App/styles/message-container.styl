.conversation
  background-color gray
  display flex
  display -webkit-flex
  flex-direction column
  flex-basis 75%
  min-width 0

.message-container
  background-color white
  overflow-y auto
  height 100%
  
  & > div
    margin 20px
    display flex

    & > div
      padding 10px
      font-size 15px
      word-wrap break-word
      
    & > div:first-child
      background-color #f3f3f5
      border-radius 10px
      max-width 60%
      
    & > div:last-child
      color #c2c6d2

.You
  justify-content flex-end
  -webkit-justify-content flex-end
  & > div:last-child
    margin-left 2%
    
.Stranger
  & > div:last-child
    margin-left 2%